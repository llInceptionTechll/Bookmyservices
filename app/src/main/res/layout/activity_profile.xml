<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f7f7"
    tools:context="tech.inception.bookmyservices.views.Profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/toolbar"
        android:background="@color/startColor">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            android:padding="10dp"
            android:id="@+id/back_icon"
            android:clickable="true"
            />
        <tech.inception.bookmyservices.custom.TextViewNormal
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/back_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/service_name"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/toolbar"
        android:id="@+id/profile_semi"
        android:orientation="vertical"
        android:background="@color/startColor">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="-40dp"
        android:layout_marginLeft="-40dp"

        android:background="@drawable/semicircle"
        android:backgroundTint="#f9f7f7"
      >

    </RelativeLayout>

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/semicircle"
        android:backgroundTint="@color/middleColor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:id="@+id/profile_pic_lay">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/user_profile"
            android:padding="10dp"
            android:tint="@color/white"/>

    </FrameLayout>

    <tech.inception.bookmyservices.custom.TextViewNormal
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About"
        android:textSize="16sp"
        android:id="@+id/about_text"
        android:textColor="#000"
        android:layout_below="@+id/profile_pic_lay"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/about_lay"
        android:layout_below="@+id/about_text"
        android:layout_margin="2dp"
        android:background="@drawable/pop_up_back">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/d_user_icon"
                android:padding="10dp"/>

            <tech.inception.bookmyservices.custom.EditTextAvira
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="name"
                android:background="@null"
                android:textSize="18sp"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="#000"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/feedback"
                android:padding="10dp"/>

            <tech.inception.bookmyservices.custom.EditTextAvira
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="email"
                android:background="@null"
                android:textSize="18sp"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="#000"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/colour_smartphone"
                android:padding="10dp"/>

            <tech.inception.bookmyservices.custom.EditTextAvira
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="mobile no."
                android:background="@null"
                android:textSize="18sp"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="#000"/>


        </LinearLayout>


    </LinearLayout>

    <tech.inception.bookmyservices.custom.TextViewNormal
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="16sp"
        android:id="@+id/address_text"
        android:textColor="#000"
        android:layout_below="@+id/about_lay"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/address_text"
        android:layout_margin="2dp"
        android:background="@drawable/pop_up_back">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/house"
                android:padding="10dp"/>

            <tech.inception.bookmyservices.custom.EditTextAvira
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="house no. / street no."
                android:background="@null"
                android:textSize="18sp"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="#000"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/placeholder"
                android:padding="10dp"/>

            <tech.inception.bookmyservices.custom.EditTextAvira
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="locality / landmark"
                android:background="@null"
                android:textSize="18sp"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="#000"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/coloured_city"
                android:padding="10dp"/>

            <tech.inception.bookmyservices.custom.EditTextAvira
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="city"
                android:background="@null"
                android:textSize="18sp"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="#000"/>


        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
