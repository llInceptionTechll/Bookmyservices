<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_laundry_service"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f7f7"

    tools:context="tech.inception.bookmyservices.views.Repair_service_category">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/toolbar_gradient">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            android:padding="10dp"
            android:id="@+id/back_icon"
            android:clickable="true"
            />
        <tech.inception.bookmyservices.custom.TextViewNormal
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/back_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/service_name"
            />

        <tech.inception.bookmyservices.custom.TextViewNormal
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:text="0"
            android:textColor="@color/startColor"
            android:background="@drawable/cart_number"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/cart_item_no"

            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/cart"
            android:layout_toLeftOf="@+id/cart_item_no"
            android:layout_centerVertical="true"
            />


    </RelativeLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/bottom_lay"
        android:id="@+id/scroll_service"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/pop_up_back"
          android:orientation="vertical"
          android:padding="10dp"
          android:clickable="true"
          android:onClick="dry_service"
          android:layout_margin="3dp">

          <tech.inception.bookmyservices.custom.TextViewBold
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Dry Servicing"
              android:textSize="18sp"
              android:textColor="#000"/>

          <tech.inception.bookmyservices.custom.TextViewNormal
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:text="Dry cleaning of filter , blower , cooling coils and more."
              android:textColor="@android:color/darker_gray"
              android:textSize="12sp"/>
      </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/pop_up_back"
                android:orientation="vertical"
                android:padding="10dp"
                android:clickable="true"
                android:onClick="wet_service"
                android:layout_margin="3dp">

                <tech.inception.bookmyservices.custom.TextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wet Servicing"
                    android:textSize="18sp"
                    android:textColor="#000"/>

                <tech.inception.bookmyservices.custom.TextViewNormal
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Water cleaning of filter , panel , blower , cooling coils and more."
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/pop_up_back"
                android:orientation="vertical"
                android:padding="10dp"
                android:clickable="true"
                android:onClick="gas_refill"
                android:layout_margin="3dp">

                <tech.inception.bookmyservices.custom.TextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gas Refill"
                    android:textSize="18sp"
                    android:textColor="#000"/>

                <tech.inception.bookmyservices.custom.TextViewNormal
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leakage will be checked befaore gas charging."
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/pop_up_back"
                android:orientation="vertical"
                android:padding="10dp"
                android:clickable="true"
                android:onClick="installation"
                android:layout_margin="3dp">

                <tech.inception.bookmyservices.custom.TextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Installation"
                    android:textSize="18sp"
                    android:textColor="#000"/>

                <tech.inception.bookmyservices.custom.TextViewNormal
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get your AC installed by expert technician."
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/pop_up_back"
                android:orientation="vertical"
                android:padding="10dp"
                android:clickable="true"
                android:onClick="uninstallation"
                android:layout_margin="3dp">

                <tech.inception.bookmyservices.custom.TextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uninstallation"
                    android:textSize="18sp"
                    android:textColor="#000"/>

                <tech.inception.bookmyservices.custom.TextViewNormal
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get your AC uninstall by expert technician."
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
