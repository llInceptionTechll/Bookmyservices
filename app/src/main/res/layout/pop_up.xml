<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_up_back">

    <tech.inception.bookmyservices.custom.TextViewBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SERVICE"
        android:id="@+id/delete_service_heading"
        android:textColor="@color/startColor"
        android:padding="15dp"
        android:textSize="18sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <tech.inception.bookmyservices.custom.TextViewNormal
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to remove this service from your cart ?"
        android:padding="15dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="10dp"

        >
        <tech.inception.bookmyservices.custom.TextViewNormal
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cancel"
            android:layout_marginRight="1dp"
            android:textSize="18sp"
            android:clickable="true"
            android:gravity="center"
            android:id="@+id/cancel_action"
            android:textColor="@color/white"
            android:background="@drawable/left_one_rounded_rect"/>

        <tech.inception.bookmyservices.custom.TextViewNormal
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Delete"
            android:clickable="true"
            android:id="@+id/delete_action"
            android:layout_marginLeft="1dp"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/right_one_rounded"/>


    </LinearLayout>

</LinearLayout>